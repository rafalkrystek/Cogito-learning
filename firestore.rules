rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNKCJE POMOCNICZE (Dla bezpieczeństwa i porządku) ---
    
    // Sprawdza czy użytkownik jest zalogowany
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Sprawdza czy to konkretny użytkownik (właściciel danych)
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Sprawdza role (wymaga Custom Claims w Firebase Auth!)
    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isTeacher() {
      return hasRole('teacher');
    }
    
    function isParent() {
      return hasRole('parent');
    }
    
    function isStudent() {
      return hasRole('student');
    }

    // --- REGUŁY WŁAŚCIWE ---

    // 1. UŻYTKOWNICY
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId) || isAdmin(); 
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // 2. KURSY - wszyscy zalogowani mogą czytać (filtrowanie po stronie klienta)
    match /courses/{courseId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    // 3. MODUŁY - wszyscy zalogowani mogą czytać (filtrowanie po stronie klienta)
    match /modules/{moduleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    // 4. LEKCJE - wszyscy zalogowani mogą czytać (filtrowanie po stronie klienta)
    match /lessons/{lessonId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    // 5. POSTĘP UCZNIA - WAŻNE: dla query z where() musimy pozwolić na czytanie
    match /progress/{progressId} {
      // Dla query z where('studentId', '==', X) - pozwól wszystkim zalogowanym
      // Szczegółowa weryfikacja relacji parent-student jest w kodzie aplikacji
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (
        request.resource.data.studentId == request.auth.uid || 
        request.resource.data.user_id == request.auth.uid
      );
      allow update: if isSignedIn() && (
        (resource.data.studentId == request.auth.uid || resource.data.user_id == request.auth.uid) ||
        isAdmin() || isTeacher()
      );
      allow delete: if isAdmin() || isTeacher();
    }

    // 6. QUIZY - wszyscy zalogowani mogą czytać (filtrowanie po stronie klienta)
    match /quizzes/{quizId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    // 7. WYNIKI QUIZÓW
    match /quiz_results/{resultId} {
      allow read: if isSignedIn() && (
        resource.data.user_id == request.auth.uid || 
        isAdmin() || 
        isTeacher() ||
        (isParent() && resource.data.user_id != null)
      );
      allow create: if isOwner(request.resource.data.user_id);
      allow update, delete: if isSignedIn() && (
        resource.data.user_id == request.auth.uid || 
        isAdmin()
      );
    }

    // 8. PRÓBY QUIZÓW
    match /quiz_attempts/{attemptId} {
      allow read: if isSignedIn() && (
        resource.data.user_id == request.auth.uid || 
        isAdmin() || 
        isTeacher() ||
        (isParent() && resource.data.user_id != null)
      );
      allow create: if isOwner(request.resource.data.user_id);
      allow update, delete: if isSignedIn() && (
        resource.data.user_id == request.auth.uid || 
        isAdmin()
      );
    }

    // 9. GRUPY
    match /groups/{groupId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isTeacher();
    }

    // 10. CZATY GRUPOWE
    match /groupChats/{chatId} {
      allow read, write: if isSignedIn() && (
        request.auth.uid in resource.data.participants ||
        isAdmin() ||
        isTeacher()
      );
    }

    // 11. WIADOMOŚCI W CZATACH
    match /groupChats/{chatId}/messages/{messageId} {
      allow read, write: if isSignedIn() && (
        request.auth.uid in get(/databases/$(database)/documents/groupChats/$(chatId)).data.participants ||
        isAdmin() ||
        isTeacher()
      );
    }

    // 12. OCENY - WAŻNE: dla query z where() musimy pozwolić na czytanie
    match /grades/{gradeId} {
      // Dla query z where('studentId', '==', X) - pozwól wszystkim zalogowanym
      // Szczegółowa weryfikacja relacji parent-student jest w kodzie aplikacji
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin() || isTeacher();
    }

    // 13. KLASY
    match /classes/{classId} {
      allow read: if isSignedIn();
      
      allow create: if isSignedIn() && (
        request.resource.data.teacher_id == request.auth.uid ||
        isTeacher() || 
        isAdmin()
      );
      
      allow update: if isSignedIn() && (
        resource.data.teacher_id == request.auth.uid ||
        isAdmin() ||
        (isTeacher() && (resource.data.teacher_id == '' || resource.data.teacher_id == null))
      );
      
      allow delete: if isSignedIn() && (
        resource.data.teacher_id == request.auth.uid ||
        isAdmin()
      );
    }

    // 14. WYDARZENIA (Kalendarz)
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || isTeacher();
      allow update, delete: if isAdmin() || isTeacher() || (isSignedIn() && resource.data.createdBy == request.auth.uid);
    }

    // 15. POWIADOMIENIA - WAŻNE: dla query z where() musimy pozwolić na czytanie
    match /notifications/{notificationId} {
      // Dla query z where('user_id', '==', X) - pozwól wszystkim zalogowanym
      // Szczegółowa weryfikacja relacji parent-student jest w kodzie aplikacji
      allow read: if isSignedIn();
      allow create: if isAdmin() || isTeacher();
      allow update: if isSignedIn() && (
        resource.data.user_id == request.auth.uid ||
        (isParent() && resource.data.user_id != null)
      );
      allow delete: if isAdmin() || isTeacher();
    }

    // 16. SESJE i CZAS NAUKI (User Specific)
    match /userSessions/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /userLearningTime/{userId} {
      allow write: if isOwner(userId);
      allow read: if isOwner(userId) || isAdmin() || isTeacher() || isParent();
    }

    match /user_learning_time/{documentId} {
      allow write: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.user_id == request.auth.uid
      );
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.user_id == request.auth.uid ||
        isAdmin() ||
        isTeacher() ||
        isParent()
      );
    }

    // 17. WIADOMOŚCI PRYWATNE
    match /messages/{messageId} {
      allow read: if isSignedIn() && (
        resource.data.from == request.auth.uid || 
        resource.data.to == request.auth.uid ||
        isAdmin() || 
        isTeacher() ||
        isParent()
      );
      allow create: if isOwner(request.resource.data.from);
      allow update: if isSignedIn() && (
        resource.data.from == request.auth.uid ||
        resource.data.to == request.auth.uid ||
        isAdmin() || 
        isTeacher() ||
        isParent()
      );
      allow delete: if isSignedIn() && (
        resource.data.from == request.auth.uid ||
        isAdmin()
      );
    }

    // 18. RELACJE RODZIC-UCZEŃ - BEZPIECZNE: tylko właściciel relacji
    match /parent_students/{documentId} {
      allow read: if isSignedIn() && (
        resource.data.parent == request.auth.uid ||
        isAdmin() || 
        isTeacher()
      );
      allow write: if isAdmin() || isTeacher();
    }

    // 19. STATUSY POWIADOMIEŃ
    match /notification_read_status/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- BLOKADA RESZTY ---
    // Wszystko inne jest automatycznie zablokowane
  }
}
